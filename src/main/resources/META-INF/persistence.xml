<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
  <!-- Define Persistence Unit -->
  <persistence-unit name="jpaSistemaCafeCol" transaction-type="JTA">
    <jta-data-source>jdbc/jpaSistemaCafeCol</jta-data-source>
    <class>com.cafecol.entities.Carrito</class>
    <class>com.cafecol.entities.CarritoItem</class>
    <class>com.cafecol.entities.Cliente</class>
    <class>com.cafecol.entities.DetallePedido</class>
    <class>com.cafecol.entities.Pedido</class>
    <class>com.cafecol.entities.Producto</class>
    <class>com.cafecol.entities.Usuario</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
